<Styles xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VDrumExplorer.Gui">
    <Style Selector="Window.WindowStyle">
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style Selector="Menu">
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style Selector="Button">
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    
    <Styles.Resources>
        <!-- Margin to the left of a value when being displayed as a key/value pair. -->
        <Thickness x:Key="ValueMargin">20,0,0,0</Thickness>
        <Thickness x:Key="ValueMarginWithVertical">20,6,0,3</Thickness>
        <Thickness x:Key="ValueMarginWithMarginAbove">20,6,0,0</Thickness>

        <!-- Margin above a stack panel for vertical separation -->
        <Thickness x:Key="PanelMargin">0,10,0,0</Thickness>

        <Thickness x:Key="AllAroundMargin">10,10,10,10</Thickness>
    </Styles.Resources>
</Styles>